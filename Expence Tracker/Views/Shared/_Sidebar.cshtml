	{
		text = "Dashboard",
		url = "/",
		iconCss = "fa-solid fa-box"
	});
	menuItems.Add(new
	{
		text = "Category",
		url = Url.Action("Index", "Categories"),
		iconCss="fa-solid fa-folder-closed"
